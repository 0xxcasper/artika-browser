{
  "id": "navigation_menu",
  "label": "Navigation Menu",
  "repeatable": false,
  "status": true,
  "format": "custom",
  "json": {
    "Main": {
      "items": {
        "type": "Group",
        "config": {
          "fields": {
            "label": {
              "type": "Text",
              "config": {
                "label": "Menu Label",
                "placeholder": "Menu item label"
              }
            },
            "href": {
              "type": "Text",
              "config": {
                "label": "Menu Href",
                "placeholder": "Menu item link (e.g., /, /artwalk)"
              }
            },
            "subs": {
              "type": "Group",
              "config": {
                "fields": {
                  "id": {
                    "type": "Text",
                    "config": {
                      "label": "Submenu ID",
                      "placeholder": "Unique identifier for submenu"
                    }
                  },
                  "name": {
                    "type": "Text",
                    "config": {
                      "label": "Submenu Name",
                      "placeholder": "Submenu item name"
                    }
                  },
                  "href": {
                    "type": "Text",
                    "config": {
                      "label": "Submenu Href",
                      "placeholder": "Submenu item link"
                    }
                  }
                },
                "label": "Submenus"
              }
            }
          },
          "label": "Menu Items"
        }
      },
      "cta_label": {
        "type": "Text",
        "config": {
          "label": "CTA Label",
          "placeholder": "Button text (e.g., Book)"
        }
      },
      "cta_link": {
        "type": "Text",
        "config": {
          "label": "CTA Link",
          "placeholder": "Button link (e.g., https://www.google.com)"
        }
      },
      "schedule_tour_title": {
        "type": "Text",
        "config": {
          "label": "Schedule Tour Title",
          "placeholder": "Hẹn lịch tham quan"
        }
      },
      "schedule_tour_description": {
        "type": "StructuredText",
        "config": {
          "label": "Schedule Tour Description",
          "placeholder": "Artika đã mở cửa giới hạn cho bạn đến tham quan trải nghiệm. Để lại thông tin để khôi nguồn chuyến đi đến miền bất tận.",
          "allowTargetBlank": true,
          "single": "paragraph,strong,em,hyperlink,list-item,o-list-item"
        }
      },
      "schedule_tour_phone_placeholder": {
        "type": "Text",
        "config": {
          "label": "Phone Input Placeholder",
          "placeholder": "Số điện thoại"
        }
      },
      "schedule_tour_email_placeholder": {
        "type": "Text",
        "config": {
          "label": "Email Input Placeholder",
          "placeholder": "Email"
        }
      },
      "schedule_tour_date_placeholder": {
        "type": "Text",
        "config": {
          "label": "Date Input Placeholder",
          "placeholder": "Select Date"
        }
      },
      "schedule_tour_button_text": {
        "type": "Text",
        "config": {
          "label": "Submit Button Text",
          "placeholder": "Đặt lịch ngay!"
        }
      },
      "schedule_tour_success_message": {
        "type": "Text",
        "config": {
          "label": "Success Message",
          "placeholder": "Thank you! We will contact you soon to confirm your tour schedule."
        }
      },
      "schedule_tour_error_message": {
        "type": "Text",
        "config": {
          "label": "Error Message",
          "placeholder": "Something went wrong. Please try again."
        }
      },
      "schedule_tour_validation_messages": {
        "type": "Group",
        "config": {
          "fields": {
            "schedule_tour_phone_required": {
              "type": "Text",
              "config": {
                "label": "Phone Required Message",
                "placeholder": "Please enter your phone number"
              }
            },
            "schedule_tour_email_required": {
              "type": "Text",
              "config": {
                "label": "Email Required Message",
                "placeholder": "Please enter your email address"
              }
            },
            "schedule_tour_date_required": {
              "type": "Text",
              "config": {
                "label": "Date Required Message",
                "placeholder": "Please select a tour date"
              }
            },
            "schedule_tour_phone_invalid": {
              "type": "Text",
              "config": {
                "label": "Phone Invalid Message",
                "placeholder": "Please enter a valid phone number"
              }
            },
            "schedule_tour_email_invalid": {
              "type": "Text",
              "config": {
                "label": "Email Invalid Message",
                "placeholder": "Please enter a valid email address"
              }
            },
            "schedule_tour_date_future": {
              "type": "Text",
              "config": {
                "label": "Date Future Message",
                "placeholder": "Please select a future date"
              }
            }
          },
          "label": "Validation Messages"
        }
      }
    }
  }
}
